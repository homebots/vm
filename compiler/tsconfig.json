{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2022",
    "lib": ["ESNext"],
    "rootDir": "./src/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.mts"]
}
